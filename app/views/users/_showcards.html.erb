<% if !@page_user.nil? %>
	<% @user = @page_user %>
<% end %>
<p>
  <b>Username:</b>
  <%=h @user.username %>
</p>

<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>

<p>
	<b>Cards:</b> 
	<% @user.cards.each do |card| %>
	<%= link_to card.title, :controller => 'cards', :action => 'show', :id => card.id %>, 
	<% end %>
</p>