<div class="cardslist">
<h1><%= current_user.firstname %>'s Cards</h1>

<table>

<% @cards.each do |card| %>
  <tr>
    <td><%= link_to card.title, edit_card_path(card) %></td>
    <td>(<%= link_to 'Delete', card, :confirm => 'Are you sure?', :method => :delete %>)</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New card', new_card_path %>

</div>
